<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Smoke Test Suite" parallel="methods" thread-count="2">
    
    <test name="Critical Path Tests">
        <parameter name="browser" value="chrome"/>
        <parameter name="environment" value="staging"/>
        <parameter name="headless" value="true"/>
        
        <groups>
            <run>
                <include name="smoke"/>
                <include name="critical"/>
            </run>
        </groups>
        
        <classes>
            <class name="com.automation.framework.tests.LoginTest">
                <methods>
                    <include name="testValidLogin"/>
                </methods>
            </class>
            <class name="com.automation.framework.tests.DashboardTest">
                <methods>
                    <include name="testDashboardLoad"/>
                </methods>
            </class>
        </classes>
    </test>
    
</suite>